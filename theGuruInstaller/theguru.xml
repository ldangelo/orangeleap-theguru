<project>
    <shortName>theguru</shortName>
    <fullName>The Guru</fullName>
    <version>1.0</version>
    <installerFilename></installerFilename>
    <leftImage>Images/guru_logo_tag_balls_Left2-1.png</leftImage>
    <logoImage>Images/Installer_Top_Banner.PNG</logoImage>
    <splashImage>Images/guru_logo_tag_balls2-1_Splash.PNG</splashImage>
    <preInstallationActionList>
        <addEnvironmentVariable>
            <name>JAVA_HOME</name>
            <scope>system</scope>
            <value>C:\Program Files\Java\jdk1.6.0_10</value>
        </addEnvironmentVariable>
    </preInstallationActionList>
    <postInstallationActionList>
        <runProgram>
            <program>${installdir}\jdk-6u10-windows-i586-p.exe</program>
            <programArguments>/quiet</programArguments>
        </runProgram>
        <iniFileSet>
            <file>${installdir}/MySQL Server 5.0/my.ini</file>
            <key>basedir</key>
            <section>mysqld</section>
            <value>"${installdir.unix}/MySQL Server 5.0/"</value>
        </iniFileSet>
        <iniFileSet>
            <file>${installdir}/MySQL Server 5.0/my.ini</file>
            <key>datadir</key>
            <section>mysqld</section>
            <value>"${installdir.unix}/MySQL Server 5.0/Data/"</value>
        </iniFileSet>
        <actionGroup>
            <explanation>TheGuru.Properties Modifications</explanation>
            <actionList>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>jdbc.sqlserver.user</key>
                    <value>${sqlusername}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>jdbc.sqlserver.password</key>
                    <value>${sqlpassword}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>jdbc.sqlserver.servername</key>
                    <value>${servername}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>jdbc.sqlserver.instancename</key>
                    <value>${instancename}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>jdbc.sqlserver.databasename</key>
                    <value>${databasename}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <explanation>Updating JDBC URL</explanation>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>userdetails.jdbc.url</key>
                    <value>jdbc:sqlserver://${servername};instanceName=${instancename};databaseName=${databasename};create=true</value>
                    <ruleList>
                        <compareTextLength>
                            <length>0</length>
                            <logic>does_not_equal</logic>
                            <text>${instancename}</text>
                        </compareTextLength>
                    </ruleList>
                </propertiesFileSet>
                <propertiesFileSet>
                    <explanation>Updating JDBC URL</explanation>
                    <file>${installdir}\apache-tomcat-6.0.18\lib\theguru.properties</file>
                    <key>userdetails.jdbc.url</key>
                    <value>jdbc:sqlserver://${servername};databaseName=${databasename};create=true</value>
                    <ruleList>
                        <compareTextLength>
                            <length>0</length>
                            <logic>equals</logic>
                            <text>${instancename}</text>
                        </compareTextLength>
                    </ruleList>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}/apache-tomcat-6.0.18/lib/theguru.properties</file>
                    <key>userdetails.jdbc.username</key>
                    <value>${sqlusername}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}/apache-tomcat-6.0.18/lib/theguru.properties</file>
                    <key>userdetails.jdbc.password</key>
                    <value>${sqlpassword}</value>
                </propertiesFileSet>
            </actionList>
        </actionGroup>
        <actionGroup>
            <explanation>Catalina.Properties Modifications</explanation>
            <actionList>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.sqlserver.user</key>
                    <value>${sqlusername}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.sqlserver.password</key>
                    <value>${sqlpassword}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.sqlserver.servername</key>
                    <value>${servername}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.sqlserver.instancename</key>
                    <value>${instancename}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.sqlserver.databasename</key>
                    <value>${databasename}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.url</key>
                    <value>jdbc:mysql://localhost:3306/theguru?create=true</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.username</key>
                    <value>theguru</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>jdbc.password</key>
                    <value>orangeleap</value>
                </propertiesFileSet>
                <propertiesFileSet>
                    <explanation>Updating JDBC URL</explanation>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>userdetails.jdbc.url</key>
                    <value>jdbc:sqlserver://${servername};instanceName=${instancename};databaseName=${databasename};create=true</value>
                    <ruleList>
                        <compareTextLength>
                            <length>0</length>
                            <logic>does_not_equal</logic>
                            <text>${instancename}</text>
                        </compareTextLength>
                    </ruleList>
                </propertiesFileSet>
                <propertiesFileSet>
                    <explanation>Updating JDBC URL</explanation>
                    <file>${installdir}\apache-tomcat-6.0.18\conf\catalina.properties</file>
                    <key>userdetails.jdbc.url</key>
                    <value>jdbc:sqlserver://${servername};databaseName=${databasename};create=true</value>
                    <ruleList>
                        <compareTextLength>
                            <length>0</length>
                            <logic>equals</logic>
                            <text>${instancename}</text>
                        </compareTextLength>
                    </ruleList>
                </propertiesFileSet>
            </actionList>
        </actionGroup>
        <createWindowsService>
            <abortOnError>0</abortOnError>
            <displayName>MySql</displayName>
            <program>${installdir}\MySQL Server 5.0\bin\mysqld-nt.exe</program>
            <programArguments>--defaults-file="${installdir}\MySQL Server 5.0\my.ini" MySQL</programArguments>
            <serviceName>MySql</serviceName>
            <startType>auto</startType>
            <ruleList>
                <windowsServiceTest>
                    <condition>not_exists</condition>
                    <service>MySql</service>
                </windowsServiceTest>
            </ruleList>
        </createWindowsService>
        <startWindowsService>
            <abortOnError>0</abortOnError>
            <delay>15000</delay>
            <displayName>MySql</displayName>
            <serviceName>MySql</serviceName>
        </startWindowsService>
        <runProgram>
            <program>${installdir}\apache-tomcat-6.0.18\bin\service.bat</program>
            <programArguments>install</programArguments>
        </runProgram>
        <startWindowsService>
            <abortOnError>0</abortOnError>
            <delay>15000</delay>
            <displayName>Apache Tomcat</displayName>
            <serviceName>Tomcat6</serviceName>
        </startWindowsService>
        <launchBrowser>
            <url>http://localhost:8080/jasperserver</url>
        </launchBrowser>
        <substitute>
            <abortOnError>0</abortOnError>
            <customErrorMessage>Error updating connection string.</customErrorMessage>
            <explanation>Update MPX Connection String</explanation>
            <files>${installdir}\Sql\20090415_02_UpdateMPXDataSource.sql</files>
            <type>exact</type>
            <ruleList>
                <compareTextLength>
                    <length>0</length>
                    <logic>does_not_equal</logic>
                    <text>${instancename}</text>
                </compareTextLength>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>MPXConnectionString</pattern>
                    <value>jdbc:sqlserver://${servername};instancename=${instancename};databaseName=${databasename}</value>
                </substitution>
                <substitution>
                    <pattern>MPXUserName</pattern>
                    <value>${sqlusername}</value>
                </substitution>
                <substitution>
                    <pattern>MPXPassword</pattern>
                    <value>${sqlpassword}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <abortOnError>0</abortOnError>
            <customErrorMessage>Error updating connection string.</customErrorMessage>
            <explanation>Update MPX Connection String</explanation>
            <files>${installdir}\Sql\20090415_02_UpdateMPXDataSource.sql</files>
            <type>exact</type>
            <ruleList>
                <compareTextLength>
                    <length>0</length>
                    <logic>equals</logic>
                    <text>${instancename}</text>
                </compareTextLength>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>MPXConnectionString</pattern>
                    <value>jdbc:sqlserver://${servername};databaseName=${databasename}</value>
                </substitution>
                <substitution>
                    <pattern>MPXUserName</pattern>
                    <value>${sqlusername}</value>
                </substitution>
                <substitution>
                    <pattern>MPXPassword</pattern>
                    <value>${sqlpassword}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <runProgram>
            <program>${installdir}\Sql\RunAllSql.bat</program>
            <programArguments>${installdir.dos}</programArguments>
        </runProgram>
    </postInstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Orange Leap</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
