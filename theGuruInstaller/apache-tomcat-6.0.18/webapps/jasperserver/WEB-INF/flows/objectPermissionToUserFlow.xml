<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
						http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="loadPermissionsForUsers"/>
	
	<action-state id="loadPermissionsForUsers">
		<action bean="objectPermissionAction"/>
		<transition on="success" to="viewPermissions"/>
	</action-state>

	<view-state id="viewPermissions" view="objectPermission/objPermissionToUser">
		<entry-actions>
			<set attribute="prevForm" value="${'viewPermissions'}" scope="flow"/>
		</entry-actions>
		<transition on="setPermission" to="setUserPermission"/>
		<transition on="viewEditUser" to="userEditFlow"/>
		<transition on="rolePermissions" to="objectPermissionToRoleFlow"/>
		<transition on="goToPage" to="goToPage"/>
		<transition on="goToPageAndSave" to="setUserPermission"/>
		<transition on="back" to="setUserPermissionAndDone"/>
		<transition on="cancel" to="backToRepositoryExplorerFlow"/>
	</view-state>

	<action-state id="goToPage">
		<action bean="objectPermissionAction"/>
		<transition on="success" to="loadPermissionsForUsers"/>
	</action-state>

	<action-state id="setUserPermission">
		<action bean="objectPermissionAction"/>
		<transition on="success" to="loadPermissionsForUsers"/>
	</action-state>

	<subflow-state id="userEditFlow" flow="userEditFlow">
		<transition on="done" to="loadPermissionsForUsers"/>
	</subflow-state>

	<subflow-state id="objectPermissionToRoleFlow" flow="objectPermissionToRoleFlow">
		<transition on="done" to="loadPermissionsForUsers"/>
	</subflow-state>
	
	<action-state id="setUserPermissionAndDone">
		<action bean="objectPermissionAction" method="setUserPermission"/>
		<transition on="success" to="backToRepositoryExplorerFlow"/>
	</action-state>

	
	<subflow-state id="repoAdminFlow" flow="repoAdminFlow">
	</subflow-state>
	
	<view-state id="backToRepositoryExplorerFlow" view="flowRedirect:repositoryExplorerFlow?showFolder=${requestParameters.ParentFolderUri}" />
	
	<end-state id="done"/>

	<!-- exceptions handling -->
	<decision-state id="backFromError">
		<if test="${not (flowScope.prevForm == null or flowScope.prevForm == '')}" then="${flowScope.prevForm}" else="done"/>
	</decision-state>
	<view-state id="errorPage" view="JSErrorPage" />
	<global-transitions>
		<transition on="backFromErrorPage" to="backFromError"/>
		<transition on-exception="java.lang.Throwable" to="errorPage"/>
	</global-transitions>
	<!-- end exceptions handling -->

	<import resource="objectPermissionBeans.xml"/>

</flow>