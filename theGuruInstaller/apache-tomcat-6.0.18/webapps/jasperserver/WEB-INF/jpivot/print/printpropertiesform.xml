<?xml version="1.0" encoding="iso-8859-1"?>

<xform style="manual">
<table border="1" cellspacing="0" cellpadding="2">

 <tr>
  <th colspan="2" class="xform-title">
   <table border="0" cellspacing="0" cellpadding="0" width="100%">
    <tr>
     <th align="left" class="xform-title">
      fmt:jsp.wcf.print.printProperties
     </th>
     <td align="right" class="xform-close-button">
      <imgButton src="wcf/form/cancel.png" action="revert" label="fmt:jsp.wcf.print.close" hide="true" handler="com.tonbeller.wcf.form.ButtonHandler"/>
     </td>
    </tr>
   </table>
  </th>
 </tr>

 <tr>
  <td>fmt:jsp.wcf.print.reportTitle</td>
  <td>
   <textField type="string" modelReference="reportTitle" size="30" title="fmt:jsp.wcf.print.reportTitle.tooltips"/>
  </td>
 </tr>
 <tr>
  <td>fmt:jsp.wcf.print.pageOrientation</td>
  <td>
      <listBox1 type="string" modelReference="pageOrientation">
            <listItem value="portrait" label="fmt:jsp.wcf.print.portrait"/>
            <listItem value="landscape" label="fmt:jsp.wcf.print.landscape"/>
       </listBox1>
  </td>
 </tr>
  <tr>
  <td>fmt:jsp.wcf.print.pagerSize</td>
  <td>
     <listBox1 type="string" modelReference="paperType">
	<listItem value="USletter" label="fmt:jsp.wcf.print.Usletter"/>
	<listItem value="A3" label="fmt:jsp.wcf.print.a3"/>
	<listItem value="A4" label="fmt:jsp.wcf.print.a4"/>
	<listItem value="A5" label="fmt:jsp.wcf.print.a5"/>
	<listItem value="custom" label="fmt:jsp.wcf.print.custom"/>
        <listItem value="auto" label="fmt:jsp.wcf.print.auto"/>
   </listBox1>
   </td>
  </tr>    
  <tr>
  <td>fmt:jsp.wcf.print.customHeightWidth</td>
  <td>
   <textField type="double" modelReference="pageHeight" size="4" title="fmt:jsp.wcf.print.customHeight.tooltips"/>fmt:jsp.wcf.print.cmLabel
   <textField type="double" modelReference="pageWidth" size="4" title="fmt:jsp.wcf.print.customWidth.tooltips"/>fmt:jsp.wcf.print.cmDefaultLabel
  </td>
 </tr>
 
 <tr>
  <td>fmt:jsp.wcf.print.tableWidth</td>
  <td>
   <checkBox modelReference="setTableWidth"/>fmt:jsp.wcf.print.tableWidthLabel
   <textField type="double" modelReference="tableWidth" size="4" title="fmt:jsp.wcf.print.tableWidth.tooltips"/>fmt:jsp.wcf.print.cmLabel
  </td>
 </tr>
  <tr >
   <td colspan="2" align="left">fmt:jsp.wcf.print.chartOnSeparatePage
   <checkBox modelReference="chartPageBreak"/>
   </td>
  </tr>
  
 <tr>
  <td align="right" colspan="4">
    <button action="validate" label="fmt:jsp.wcf.print.ok" handler="com.tonbeller.wcf.form.ButtonHandler" hide="true"/>
    <button action="revert" label="fmt:jsp.wcf.print.cancel" handler="com.tonbeller.wcf.form.ButtonHandler" hide="true"/>
  </td>
 </tr>

</table>

</xform>
